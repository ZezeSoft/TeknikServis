@model LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="login">
    <div class="container">
        <h3 class="title">Giris Sayfasi</h3>
        @Html.ValidationSummary()
        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            <div class="form-group">
                @Html.LabelFor(x => x.UserName, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", placeholder = "Kullanıcı Adı.." })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Password, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.Password, new { @class = "form-control", type = "password" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.RememberMe, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.CheckBoxFor(x => x.RememberMe, new { @class = "checkbox" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-info">Giris Yap</button>
                    <a href="@Url.Action("Recovery","Account")" class="btn btn-warning">Şifremi Unuttum</a>
                </div>
            </div>
        }
    </div>
</div>
