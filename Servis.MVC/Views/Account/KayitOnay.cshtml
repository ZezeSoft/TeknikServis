@model RegisterViewModel
@{
    ViewBag.Title = "KayitOnay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
            <br /><br /><br />
            @using (Html.BeginForm("KayitOnay", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                <div class="form-group">
                   <h3>Aktivasyon kodunuzu girip uyeliginizi aktiflestiriniz</h3>
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.UserName, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.UserName)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.EmailOnay, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(x => x.EmailOnay, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.EmailOnay)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-info">Onayla</button>
                    </div>
                </div>
            }
        </div>
</div>
