@model Servis.Entity.ViewModels.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="register">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                <h3 class="title">Kayıt Olusturma</h3>
                @Html.ValidationSummary()
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    @Html.HiddenFor(x => x.ID)
                    <div class="form-group">
                        @Html.LabelFor(x => x.Name, new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = "Ad.." })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.Surname, new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Surname, new { @class = "form-control", placeholder = "Soyad.." })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.UserName, new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", placeholder = "Kullanıcı Adı.." })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.Email, new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "Email..", type = "email" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.Password, new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Password, new { @class = "form-control", type = "password" })
                            @Html.ValidationMessageFor(x => x.Password)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.ConfirmPassword, new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.ConfirmPassword, new { @class = "form-control", type = "password" })
                            @Html.ValidationMessageFor(x => x.ConfirmPassword)
                        </div>
                    </div>
                    @*<div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="submit" class="btn btn-info">Kayıt Ol</button>
                            </div>
                        </div>*@
                    @*<a href="@Url.Action("Register", "Account")" class="btn btn-info">Kayıt Ol</a>
                        <div class="form-group">
                            @Html.LabelFor(x => x.EmailOnay, new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-10">
                                @Html.TextBoxFor(x => x.EmailOnay, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.EmailOnay)
                            </div>
                        </div>*@

                    @*<a href="@Url.Action("Register", "Account")" name="" class="btn btn-info">Kayıt Ol</a>*@

                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-info">Kayıt Ol</button>
                        </div>
                    </div>
                }
            </div>
            @*<div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                    <br /><br /><br />
                    @using (Html.BeginForm("KayitOnay", "Account", FormMethod.Post))
                    {
                        <div class="form-group">
