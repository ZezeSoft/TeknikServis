@model KayitViewModel
@{
    ViewBag.Title = "Raporlama";
    Layout = "~/Views/Shared/Teknisyen/_TeknisyenLayout.cshtml";
}

<div class="row">
    <div class="col-lg-6 col-md-6">
        <div class="panel panel-warning">
            <div class="panel-heading">
                Raporlama Sayfası
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("Raporlama", "Teknisyen", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    @Html.HiddenFor(x => x.ID)
                    <div class="form-group">
                        <label for="kullaniciadi" class="col-sm-2 control-label">Kayıt Sahibi</label>
                        <div class="col-sm-10">
                            <input type="text" value="@Servis.BLL.Account.MembershipTools.GetUserName(Model.KullaniciID)" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="cihazdurumu" class="col-sm-2 control-label">Cihaz Türü</label>
                        <div class="col-sm-10">
                            <input type="text" value="@(new Servis.BLL.Repository.CihazRepo().GetById(Model.CihazID).Tur)" class="form-control disabled" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="marka" class="col-sm-2 control-label">Marka</label>
                        <div class="col-sm-10">
                            <input type="text" value="@(new Servis.BLL.Repository.MarkaRepo().GetById(Model.MarkaID).Tur)" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.Rapor, new { @class = "col-sm-2 label-control" })
                        <div class="col-sm-10">
                            @Html.TextAreaFor(x => x.Rapor, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-warning">Kaydet</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
