@using System.Linq.Expressions;
@using System.Linq;

@model AnketViewModel
@{
    ViewBag.Title = "Anket";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-7 col-md-7">
        <div class="panel panel-red">
            <div class="panel-heading">
                <h3>Anketimize Hoşgeldiniz</h3>
            </div>
            
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Sorular</th>
                                <th>Cevaplar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                using (Html.BeginForm("Anket", "Kayit", FormMethod.Post))
                                {


                                    for (int i = 0; i < Model.Sorular.Count; i++)
                                    {
                                       
                                        <tr>
                                            @Html.HiddenFor(x => x.ArizaID);
                                            <td>@(i + 1)</td>
                                            @Html.HiddenFor(x => x.Sorular[i].ID);
                                            <td>@Model.Sorular[i].Soru</td>
                                            @*<td>@Html.TextBoxFor(x => x.Sorular[i].Soru, new { @class = "form-control" })</td>*@
                                            @*@Html.HiddenFor(x => x.Cevaplar[i].ID);*@
                                            <td>@Html.DropDownListFor(x => x.Cevaplar[i].ID, (List<SelectListItem>)ViewBag.cevaplar)</td>
                                        </tr>
                                    }

                                    <tr>
                                        <td>
                                            <input type="submit" class="btn btn-danger" value="Anketi Bitir" />
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
