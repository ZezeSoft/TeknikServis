@model List<KayitViewModel>
@{
    ViewBag.Title = "Raporlama";
    Layout = "~/Views/Shared/Admin/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-7 col-md-7">
        <div class="panel panel-danger">
            <div class="panel-heading">
                Teknisyen Raporlarının Listesi
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Müşteri Ad</th>
                                <th>Cihaz Türü</th>
                                <th>Marka</th>                               
                                <th>Teknisyen</th>
                                <th>Rapor</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int sayac = 0;
                                foreach (var item in Model)
                                {
                                    sayac++;
                                    <tr>
                                        <td>@sayac</td>
                                        <td><input type="text" value="@Servis.BLL.Account.MembershipTools.GetUserName(item.KullaniciID)" class="form-control" /></td>
                                        <td>@(new Servis.BLL.Repository.CihazRepo().GetById(item.CihazID).Tur)</td>
                                        <td>@(new Servis.BLL.Repository.MarkaRepo().GetById(item.MarkaID).Tur)</td>
                                        <td><input type="text" value="@Servis.BLL.Account.MembershipTools.GetUserName(item.TeknisyenID)" class="form-control" /></td>
                                        <td>@(new Servis.BLL.Repository.ArizaRepo().GetById(item.ID).Rapor)</td>                                     
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

